<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_recipe_steps"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cv_recipe_details_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/cv_recipe_details_margin"
        android:background="@color/colorWhite"
        card_view:cardCornerRadius="@dimen/cv_recipe_details_corner_radius"
        card_view:contentPadding="@dimen/cv_recipe_details_content_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_recipe_steps_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/iv_recipe_steps_arrow"
                android:textColor="@color/colorSilver"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_recipe_steps_arrow"
                android:layout_width="@dimen/iv_recipe_steps_details_arrow_width"
                android:layout_height="@dimen/iv_recipe_steps_details_arrow_height"
                android:scaleType="fitXY"
                android:contentDescription="@string/recipe_step_details_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_chevron_right"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>