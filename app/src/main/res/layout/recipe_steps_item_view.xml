<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/ColorBabyGray">

    <TextView
        android:id="@+id/tv_recipe_steps_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_recipe_steps_arrow"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_16" />

    <ImageView
        android:id="@+id/iv_recipe_steps_arrow"
        android:layout_width="@dimen/iv_recipe_steps_details_arrow_width"
        android:layout_height="@dimen/iv_recipe_steps_details_arrow_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/recipe_step_details_arrow"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_chevron_right" />

    <View
        android:id="@+id/view_recipe_steps_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_recipe_steps_description"
        android:layout_marginTop="@dimen/view_recipe_steps_separator_margin_top"
        android:background="@color/ColorYellow" />

</RelativeLayout>