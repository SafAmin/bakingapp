<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cv_recipe_details_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/cv_recipe_details_margin"
        android:background="@color/colorWhite"
        card_view:cardCornerRadius="@dimen/cv_recipe_details_corner_radius"
        card_view:contentPadding="@dimen/cv_recipe_details_content_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_recipe_ingredients_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_recipe_ingredients_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_recipe_ingredients_ingredient"
                android:layout_marginTop="@dimen/tv_recipe_ingredients_quantity_margin_top" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>